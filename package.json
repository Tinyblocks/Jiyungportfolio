{
  "name": "jiyung-portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npx @11ty/eleventy --serve",
    "build": "npx @11ty/eleventy && node -e \"const fs=require('fs');fs.copyFileSync('node_modules/decap-cms/dist/decap-cms.js','_site/admin/decap-cms.js');\"",
    "clean": "rm -rf _site",
    "vercel:link": "sh -c 'export $(grep -E \"^[A-Z_]+=\" .env.local 2>/dev/null | xargs) && npx vercel link --yes --project jiyung-portfolio --token ${VERCEL_TOKEN}'",
    "vercel:deploy": "sh -c 'export $(grep -E \"^[A-Z_]+=\" .env.local 2>/dev/null | xargs) && npx vercel --prod --yes --token ${VERCEL_TOKEN}'"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "fast-glob": "^3.3.2",
    "decap-cms": "^3.8.3"
  }
}
